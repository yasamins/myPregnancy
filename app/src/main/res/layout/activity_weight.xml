<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EBF2"
    tools:context="com.example.yasi27.final2.WeightActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My weight"
        android:id="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="677dp"
        android:layout_marginStart="74dp"
        android:textSize="32sp"
        android:textColor="#006064"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="151dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pre-pregnancy weight"
        android:id="@+id/textView8"
        android:layout_marginTop="119dp"
        android:textSize="28sp"
        android:layout_marginBottom="384dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="56dp"
        android:layout_below="@+id/imageView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Current weight"
        android:id="@+id/textView9"
        android:textSize="30sp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="325dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/textView8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="167dp"
        android:layout_alignParentEnd="true"
        android:background="#4DD0E1"
        android:layout_marginEnd="135dp"
        android:layout_toEndOf="@+id/textView8"
        android:layout_below="@+id/currentweight"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:onClick="clear"
        android:id="@+id/cancel"
        android:background="#4DD0E1"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="63dp"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="169dp"
        android:layout_alignTop="@+id/save" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preweight"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="81dp"
        android:layout_alignStart="@+id/save"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="137dp"
        android:layout_above="@+id/currentweight" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentweight"
        android:layout_alignStart="@+id/preweight"
        android:layout_alignEnd="@+id/preweight"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignTop="@+id/textView9" />

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Cancel"-->
        <!--android:onClick="clear"-->
        <!--android:id="@+id/cancel"-->
        <!--android:layout_below="@+id/textView8"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="18dp" />-->


</RelativeLayout>