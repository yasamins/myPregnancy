<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EBF2">
    <!--android:weightSum="1"-->
    tools:context="com.example.yasi27.final2.WeightActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My weight"
        android:id="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="677dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="183dp"
        android:textSize="32sp"
        android:textColor="#006064" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Start date"
        android:id="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="131dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="556dp"
        android:layout_marginEnd="133dp"
        android:textSize="30sp"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pre-pregnancy weight"
        android:id="@+id/textView8"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignTop="@+id/textView7"
        android:layout_marginTop="136dp"
        android:textSize="28sp"
        android:layout_above="@+id/button2"
        android:layout_marginBottom="291dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Current weight"
        android:id="@+id/textView9"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="144dp"
        android:layout_marginBottom="246dp"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignParentBottom="true"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="57dp"
        android:layout_toEndOf="@+id/textView9"
        android:background="#FFFFFF"
        android:layout_marginStart="94dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_marginTop="112dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignEnd="@+id/textView10"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginStart="107dp"
        android:background="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textView12"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignStart="@+id/textView11"
        android:background="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button2"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:textSize="22sp"
        android:background="#0097A7"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginStart="62dp"
        android:layout_alignEnd="@+id/textView9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_alignStart="@+id/textView12"
        android:textSize="22sp"
        android:background="#0097A7"
        android:layout_alignEnd="@+id/textView12"
        android:layout_marginEnd="68dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignBottom="@+id/textView6"
        android:background="@drawable/weight_bkg"
        android:layout_alignParentTop="true"
        android:layout_marginTop="89dp" />
</RelativeLayout>