<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yasi27.final2.NewUserActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#B2EBF2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="      Welcome to one of the most trusted source for expert guidance on pregnancy"
        android:id="@+id/textView2"
        android:fontFamily="sans-serif"
        android:layout_marginTop="238dp"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="416dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Due Date"
        android:id="@+id/due"
        android:layout_marginTop="76dp"
        android:background="#00BCD4"
        android:onClick="DueDate"
        android:layout_marginStart="96dp"
        android:layout_below="@+id/editText"
        android:layout_marginEnd="115dp"
        android:textSize="22sp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignStart="@+id/editText" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/date_label_set"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/due"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="72dp"
        android:text="@string/date_selected"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="UserName"
        android:focusable="true"
        android:textColorHighlight="#0097A7"
        android:textColorHint="#000000"
        android:layout_marginTop="446dp"
        android:layout_below="@+id/imageView"
        android:textSize="22sp"
        android:layout_marginStart="78dp"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginEnd="57dp"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get started"
        android:id="@+id/button"
        android:background="@drawable/roundedbutton"
        android:layout_below="@+id/due"
        android:layout_marginTop="62dp"
        android:layout_alignEnd="@+id/due"
        android:textSize="22sp"
        android:onClick="DueDate"
        android:layout_alignStart="@+id/editText"
        android:layout_marginStart="97dp" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:background="@drawable/app_icon"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginBottom="181dp" />


</RelativeLayout>
